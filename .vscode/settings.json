{
    /* ****** GENERAL ****** */
    "files.trimTrailingWhitespace": true,
    "files.insertFinalNewline": true,
    "editor.formatOnSave": true,
    /* ****** ****** ****** */
    /* ****** JSON ****** */
    "[json][jsonc]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    /* ****** ****** ****** */
    /* ****** YAML ****** */
    "[yaml]": {
        "editor.insertSpaces": true,
        "editor.tabSize": 2,
        "editor.autoIndent": "advanced"
    },
    "yaml.format.bracketSpacing": false,
    "yaml.format.singleQuote": true,
    /* ****** ****** ****** */
    /* ****** DOCKER ****** */
    "[dockercompose]": {
        "editor.insertSpaces": true
    },
    /* ****** ****** ****** */
    /* ****** SHELL ****** */
    "shellcheck.enable": true,
    "shellcheck.run": "onSave",
    "shellcheck.useWorkspaceRootAsCwd": true,
    "shellcheck.customArgs": [
        "-x",
        "--shell=bash",
        "--enable=all",
        "--severity=style"
    ],
    "[shellscript]": {
        "editor.insertSpaces": true,
        "editor.tabSize": 2,
        "editor.autoIndent": "advanced"
    },
    /* ****** ****** ****** */
    /* ****** OTHER ****** */
    "prettier.configPath": "devenv/config/.prettierrc.yml",
    /* ****** ****** ****** */
    /* ****** PYTHON ****** */
    "python.defaultInterpreterPath": "python3",
    "python.languageServer": "Pylance",
    "python.linting.enabled": true,
    "python.linting.lintOnSave": true,
    "python.linting.maxNumberOfProblems": 1000,
    "python.linting.prospectorEnabled": true,
    "python.linting.prospectorArgs": [
        "--profile=devenv/config/.prospector.yml"
    ],
    "python.formatting.provider": "black",
    "python.formatting.blackArgs": ["--config=devenv/config/pyproject.toml"],
    "python.analysis.autoImportCompletions": true,
    "autoDocstring.docstringFormat": "google",
    // "[python]": {
    //     "editor.codeActionsOnSave": {
    //         "source.organizeImports": true
    //     }
    // },
    // "isort.args":["--settings-file=config/pyproject.toml"],
    /* ****** ****** ****** */
    /* ****** GO ****** */
    "go.lintOnSave": "workspace",
    "go.lintTool": "golangci-lint",
    "go.lintFlags": ["--config=devenv/config/.golangci.yml"],
    "go.useLanguageServer": true,
    "gopls": {
        "formatting.gofumpt": true,
        "ui.semanticTokens": true
    },
    /* ****** ****** ****** */
    /* ****** GROOVY ****** */
    "files.associations": {
        "Jenkinsfile": "groovy"
    },
    "[groovy]": {
        "editor.insertSpaces": true
    },
    /* ****** ****** ****** */
    /* ****** CONSOLE ****** */
    "terminal.integrated.env.windows": {
        "PWD": "${workspaceFolder}"
    },
    "terminal.integrated.defaultProfile.windows": "PowerShell",
    /* ****** ****** ****** */
    /* ****** COPILOT ****** */
    "editor.inlineSuggest.enabled": true,
    "github.copilot.enable": {
        "*": true,
        "markdown": true,
        "plaintext": true
    }
    /* ****** ****** ****** */
}
